<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Info container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/txtPlayerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number: 0"
                android:textSize="14sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtPlayerPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position: Unknown"
                android:textSize="14sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtPlayerDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB: YYYY-MM-DD"
                android:textSize="14sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtPlayerHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: 0 cm"
                android:textSize="14sp"
                android:textColor="#555555"/>

        </LinearLayout>

        <!-- Button container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="#FFFFFF"
                app:backgroundTint="#4CAF50"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#F44336"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#011933"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Back"
            app:tint="@android:color/white"
            android:onClick="onBackClicked"/>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Match Analysis"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="12dp"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Game Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvGameName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game Name"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#011933"/>

                    <TextView
                        android:id="@+id/tvGameDateVenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date | Venue"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/tvMadibazScore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Madibaz: 0"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#033E8C"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvOppositionScore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Team B: 0"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#D32F2F"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- KPI Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/kpiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#F7F7F7">

                <LinearLayout
                    android:id="@+id/kpiContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center"
                    android:weightSum="4">

                    <!-- Goals -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvKpiGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#011933"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <!-- Assists -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvKpiAssists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#011933"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assists"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <!-- Intercepts -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvKpiIntercepts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#011933"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intercepts"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>

                    <!-- Deflections -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvKpiDeflections"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#011933"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deflections"
                            android:textSize="14sp"
                            android:textColor="#555555"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Toggle -->
            <RadioGroup
                android:id="@+id/toggleStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/rbPlayerPerformance"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Performance"
                    android:checked="true"
                    android:buttonTint="#033E8C"/>

                <RadioButton
                    android:id="@+id/rbTeamStats"
                    style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Statistics"
                    android:layout_marginStart="24dp"
                    android:buttonTint="#033E8C"/>
            </RadioGroup>

            <!-- Player RecyclerView -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rvPlayerActionsCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlayerActions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chart Buttons Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chartButtonsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnGoalsChart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals"/>

                        <Button
                            android:id="@+id/btnAccuracyChart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accuracy"
                            android:layout_marginStart="8dp"/>

                        <Button
                            android:id="@+id/btnErrorsChart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Errors"
                            android:layout_marginStart="8dp"/>

                        <Button
                            android:id="@+id/btnRadarChart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contributions"
                            android:layout_marginStart="8dp"/>

                        <Button
                            android:id="@+id/btnTeamShootingChart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team Shooting"
                            android:layout_marginStart="8dp"/>
                        <RadioGroup
                            android:id="@+id/rbHalfToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <RadioButton
                                android:id="@+id/rbHalf1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Half 1"
                                android:checked="true"/>

                            <RadioButton
                                android:id="@+id/rbHalf2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Half 2"/>
                        </RadioGroup>


                    </LinearLayout>
                </HorizontalScrollView>
            </com.google.android.material.card.MaterialCardView>


            <!-- Player Stats Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/playerStatsChartCard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/playerStatsChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Shooting Accuracy Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shootingAccuracyChartCard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/shootingAccuracyChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Errors Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/errorsChartCard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/errorsChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contributions Radar Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/contributionsChartCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">
                <com.github.mikephil.charting.charts.RadarChart
                    android:id="@+id/contributionsChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Team Shooting Pie Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/teamShootingChartCard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/teamShootingChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Team Stats Scrollable Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/teamStatsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F7F7F7">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tvTeamStats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
